<%- model_class = Group -%>
<div class="page-header">
  <h1>用户组管理</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>用户组编号</th>
      <th>用户组名称</th>
      <th>用户组描述</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= link_to group.id, group_path(group) %></td>
        <td><%= group.name %></td>
        <td><%= group.description %></td>
        <td>
          <%= link_to t('.show_users_groups', :default => t("helpers.links.show_users_groups")),
                      group_users_groups_path(group), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      group_path(group), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_group_path(group), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      group_path(group),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_group_path,
            :class => 'btn btn-primary' %>
